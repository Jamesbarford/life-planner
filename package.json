{
  "name": "life-planner",
  "sideEffects": false,
  "version": "1.0.0",
  "description": "Interactive calendar with money calculator",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "start": "NODE_ENV=development webpack-dev-server --open",
    "build:analyse": "NODE_ENV=analyse webpack",
    "prettierSrc": "prettier --write **/src/**/*.{ts,tsx,js,jsx,json,css,scss}",
    "test": "jest --verbose",
    "test:watch": "jest --watchAll --verbose"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "James Barford-Evans",
  "license": "ISC",
